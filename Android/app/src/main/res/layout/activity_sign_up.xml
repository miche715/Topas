<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign.view.SignUpActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/tool_bar_style">

        <TextView
            android:id="@+id/toolBarTitleTextView"
            android:text="회원가입"
            style="@style/tool_bar_title_text_view_style"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/addProfilePhotoButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:backgroundTint="@color/brand_button_background_color"
                    android:drawableLeft="@drawable/add_photo_alternate"
                    android:elevation="10dp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:text="프로필 사진 추가"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/profilePhotoDescriptionTextView"
                    app:layout_constraintStart_toStartOf="@+id/profilePhotoDescriptionTextView"
                    app:layout_constraintTop_toBottomOf="@+id/profilePhotoDescriptionTextView" />

                <Button
                    android:id="@+id/removeProfilePhotoButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:backgroundTint="@color/error_letter_color"
                    android:drawableLeft="@drawable/disabled_by_default"
                    android:elevation="10dp"
                    android:enabled="false"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:text="프로필 사진 제거"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/addProfilePhotoButton"
                    app:layout_constraintStart_toStartOf="@+id/addProfilePhotoButton"
                    app:layout_constraintTop_toBottomOf="@+id/addProfilePhotoButton" />

                <TextView
                    android:id="@+id/profilePhotoTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:text="프로필 사진"
                    android:textColor="@color/black_letter_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilePhotoCircleImageView"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/default_profile_photo"
                    app:civ_border_color="#000000"
                    app:civ_border_overlay="true"
                    app:civ_border_width="2dp"
                    app:layout_constraintStart_toStartOf="@+id/profilePhotoTextView"
                    app:layout_constraintTop_toBottomOf="@+id/profilePhotoTextView" />

                <TextView
                    android:id="@+id/profilePhotoDescriptionTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:text="프로필 사진은 선택하지 않을 시\n기본 프로필 사진이 적용됩니다."
                    android:textColor="@color/black_letter_color"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/profilePhotoTextView"
                    app:layout_constraintStart_toEndOf="@+id/profilePhotoCircleImageView"
                    app:layout_constraintTop_toBottomOf="@+id/profilePhotoTextView" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:text="이메일"
                android:textColor="@color/black_letter_color" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:ems="10"
                android:hint="example@domain.com 형식의 이메일"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/hint_letter_color"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/emailErrorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:textColor="@color/error_letter_color"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/passwordTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:text="패스워드"
                android:textColor="@color/black_letter_color" />

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:ems="10"
                android:hint="4 ~ 20자리 영대·소문자, 숫자 조합"
                android:inputType="textPassword"
                android:textColorHint="@color/hint_letter_color"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/passwordErrorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:textColor="@color/error_letter_color"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/passwordConfirmTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:text="패스워드 확인"
                android:textColor="@color/black_letter_color" />

            <EditText
                android:id="@+id/passwordConfirmEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:ems="10"
                android:hint="4 ~ 20자리 영대·소문자, 숫자 조합"
                android:inputType="textPassword"
                android:textColorHint="@color/hint_letter_color"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/passwordConfirmErrorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:textColor="@color/error_letter_color"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:text="이름"
                android:textColor="@color/black_letter_color" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:ems="10"
                android:hint="한글로 이루어진 이름"
                android:inputType="textPersonName"
                android:textColorHint="@color/hint_letter_color"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/nameErrorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:textColor="@color/error_letter_color"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/nickNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:text="닉네임"
                android:textColor="@color/black_letter_color" />

            <EditText
                android:id="@+id/nickNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:ems="10"
                android:hint="2 ~ 8자리 한글, 영대·소문자, 숫자 조합"
                android:inputType="text"
                android:textColorHint="@color/hint_letter_color"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/nickNameErrorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:textColor="@color/error_letter_color"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/signUpButton"
                style="@style/brand_button_style"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="회원가입" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>