<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tool_bar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/tool_bar_background_color</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="tool_bar_title_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|center_vertical</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:textColor">@color/black_letter_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="on_board_title_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textColor">@color/black_letter_color</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="on_board_text_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black_letter_color</item>
    </style>

    <style name="brand_button_style">
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginVertical">12dp</item>
        <item name="android:background">@color/brand_button_background_color</item>
        <item name="android:elevation">10dp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textColor">@color/white_letter_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="white_button_style">
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginVertical">12dp</item>
        <item name="android:background">@color/white_button_background_color</item>
        <item name="android:elevation">10dp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textColor">@color/black_letter_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="description_text_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black_letter_color</item>
    </style>

    <style name="sign_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textColorHint">@color/hint_letter_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="error_text_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/error_letter_color</item>
        <item name="android:textSize">12sp</item>
    </style>



</resources>